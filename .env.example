# AI Business Automation Tree - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=production
APP_NAME=AI Business Automation Tree
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# DATABASE SETTINGS - PostgreSQL
# ============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_automation
DB_USER=admin
DB_PASSWORD=changeme-strong-password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# ============================================================================
# REDIS CACHE SETTINGS
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
CACHE_TTL=3600

# ============================================================================
# MONGODB SETTINGS - Analytics & Logs
# ============================================================================
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=changeme-mongo-password
MONGO_DB=analytics
MONGO_AUTH_SOURCE=admin

# ============================================================================
# CELERY TASK QUEUE
# ============================================================================
CELERY_BROKER_URL=redis://:changeme-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:changeme-redis-password@redis:6379/1
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# ============================================================================
# AI/ML SETTINGS
# ============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GOOGLE_API_KEY=your-google-api-key

# Hugging Face
HUGGINGFACE_API_KEY=hf_your-token

# Model Configuration
MODEL_CACHE_DIR=/app/models
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60

# ============================================================================
# AWS SETTINGS (if using AWS services)
# ============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-automation-storage

# ============================================================================
# AZURE SETTINGS (if using Azure services)
# ============================================================================
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT_NAME=gpt-4

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# OAuth Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================================================
# EMAIL SETTINGS
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=AI Automation
EMAIL_USE_TLS=true

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme-grafana-password
GRAFANA_PORT=3000

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_STORAGE_URL=redis://:changeme-redis-password@redis:6379/2

# ============================================================================
# FILE STORAGE
# ============================================================================
UPLOAD_DIR=/app/data/uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,txt,csv,json,xlsx,docx

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# ============================================================================
# BACKUP SETTINGS
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=/app/data/backups

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_WEBHOOKS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true
ENABLE_API_VERSIONING=true

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Stripe (Payment Processing)
STRIPE_PUBLIC_KEY=pk_test_your-public-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Alternative Email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
TESTING=false
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db
COVERAGE_MIN_PERCENTAGE=80

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
WORKER_PROCESSES=4
WORKER_THREADS=2
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=75
REQUEST_TIMEOUT=120
GRACEFUL_TIMEOUT=30

# ============================================================================
# CUSTOM BUSINESS LOGIC
# ============================================================================
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
BUSINESS_TIMEZONE=America/Chicago
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit the actual .env file to version control
# 2. Update all 'changeme' passwords with strong, unique passwords
# 3. Generate secure random strings for SECRET_KEY and JWT_SECRET_KEY
# 4. Rotate credentials regularly in production
# 5. Use environment-specific files: .env.dev, .env.staging, .env.production
